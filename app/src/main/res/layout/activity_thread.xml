<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.gokisoft.c1907l.ThreadActivity">

    <TextView
        android:id="@+id/at_title"
        android:textColor="@color/colorImportant"
        android:textSize="16pt"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang tải dữ liệu ..." />

    <ProgressBar
        android:id="@+id/at_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:progress="0"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/at_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNewNote"
        android:textSize="14pt"
        android:visibility="gone"
        android:gravity="center"
        android:text="0%" />

    <Button
        android:id="@+id/at_download_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Download File" />
</LinearLayout>
